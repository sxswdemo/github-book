<div class="form-horizontal">
  <div class="control-group">
    <label class="control-label" for="authors">Authors</label>
    <div class="controls">
      <!-- Bootstrap ".input-prepend .add-on" does not work with select2 inputs so we use a new class "add-on-prepend" -->
      <span class="add-on-prepend">@</span>
      <input type="text" name="authors" placeholder="People attributed to this content">
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="copyrightHolders">Copyright Holders</label>
    <div class="controls">
      <span class="add-on-prepend">@</span>
      <input type="text" name="copyrightHolders" placeholder="Copyright Holders">
    </div>
  </div>
</div>
